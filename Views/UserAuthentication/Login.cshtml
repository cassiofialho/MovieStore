@model MovieStore.Models.DTO.LoginModel
@{
    
}

<form asp-controller="UserAuthentication" asp-action="Login" method="post">
    <h2>Login</h2>
    User Name <input asp-for="Name" type="text"/><br />
    <span asp-validation-for="Name"></span>
    <br />
    Password <input asp-for="Password"type="text"/><br />
    <span asp-validation-for="Password"></span>

    @if(TempData["msg"] != null){
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }
    <button class="btn btn-primary" type="submit">Login</button>
</form>