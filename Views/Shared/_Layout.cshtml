@{
    string userName = User.Identity.Name;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie store</title>
<link rel="stylesheet" href="/css/site.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="/images/movie_filter_FILL0_wght400_GRAD0_opsz48.svg">
    <link href="https://fonts.googleapis.com/css2?family=Mukta:wght@500&display=swap" rel="stylesheet">
</head>
<body>

    <nav class="nav-bar">
        <div class="Logo">
            Movie Store
        </div>
        <ul class="nav-link">
            <li><a class="active" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Home" asp-action="About">About</a></li>
            @if (User.IsInRole("Admin"))
            {          
                    <li>
                        <a href="#">Admin <i class="fa fa-caret-down"></i></a>
                        <ul class="dropdown-nav-link">
                             <li><a asp-controller="Genre" asp-action="Add">Add Genre</a></li>
                             <li><a asp-controller="UserAuthentication" asp-action="Logout">Logout</a></li>
                        </ul>
                    </li>
            }
            @if(!User.Identity.IsAuthenticated){

                <li><a asp-controller="UserAuthentication" asp-action="Login">Login</a></li>
            }
        </ul>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        2023 - AppMovieStore - Cassio Fialho Lima
    </footer>
</body>